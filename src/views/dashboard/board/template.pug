.my-3.my-md-5.ml-5
  template(v-if="!exists")
    .container.text-center
      h1.mt-9 Twoja tablica jeszcze nie istnieje!
      button.btn.btn-primary(@click="createBoard")
        i.fe.fe-plus-circle.mr-2
        | Utwórz tablicę
  .board-container(v-else)
    .board
      .lists-container
        draggable(:options="{handle: '.move',animation: 150, group:'labels'}", v-for="(label, index) in this.board.labels", :key="label.identifier")
          section.list-container
            .list-header
              .row.mr-0
                .col-auto
                  h4.mb-5.mt-2
                    span.badge.badge-default.mr-2 {{label.tasks.length}}
                    | {{label.name}}
                .card-options.col-auto.mb-5
                  .item-action.dropdown
                    span.icon.move.mr-2
                      i.fe.fe-move
                    span.icon.fake-link(:id="label.identifier", @click="toggleOptions(label.identifier)")
                      i.fe.fe-more-vertical
                    .dropdown-menu.dropdown-menu-right(:id="label.identifier + '.settings'", @mouseleave="toggleOptions(label.identifier)")
                      span.dropdown-item.fake-link
                        i.dropdown-icon.fe.fe-trash-2
                        |  {{$t('board.delete')}}
                      span.dropdown-item.fake-link
                        i.dropdown-icon.fe.fe-edit-3
                        |  {{$t('board.change_name')}}
              draggable(:options="{animation: 150, group:'tasks'}", :list="label.tasks", v-model="label.tasks")
                task(v-for="task in label.tasks", :key="task.id", @click.native="openEditTaskModal(task, index)", :task="task")
            .item-entry
              .input-group
                input.form-control(type='text', :placeholder="$t('board.new_task')", :ref="label.identifier + '_input'", @keyup.enter="addTask(label.identifier + '_input', index)", required)
                span.input-group-append
                  button.btn.btn-primary(type='button', @click="addTask(label.identifier + '_input', index)")
                    i.fe.fe-plus
        section.list-container.mdi-opacity
          .list-header
            button.btn.btn-link.text-center(type="button", @click="addLabel") {{$t('board.add_label')}}
              i.fe.fe-plus.ml-2
  edit-task-modal(ref="taskEditModal")

