div
  .container
    .page-header
      h1.page-title {{$t('headway.page_title')}} {{headway.createdAt | moment}}
    .card.col-lg-12
      .card-body
        #dimmer.dimmer(:class="{'active': isLoading}")
          .loader
          .dimmer-content
            .row
              .col-sm-2
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.neck')}}:
                    p
                      | {{headway.neckMeasurement}}
                      span.text-green.mr-1.ml-4 {{progress.neckMeasurement}}
                      i.fe.fe-chevron-up.text-green
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.arm')}}:
                    p
                      | {{headway.armMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.forearm')}}:
                    p
                      | {{headway.forearmMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.wrist')}}:
                    p
                      | {{headway.wristMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.chest')}}:
                    p
                      | {{headway.chestMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
              .col-sm-2
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.waist')}}:
                    p
                      | {{headway.waistMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.thigh')}}:
                    p
                      | {{headway.thighMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.calf')}}:
                    p
                      | {{headway.calfMeasurement}}
                      span.text-red.mr-1.ml-4 -2
                      i.fe.fe-chevron-down.text-red
              .col-sm-8
                template(v-if="headway.images && headway.images.length !== 0")
                  Carousel(:scrollPerPage="true" :perPageCustom="[[480, 2], [768, 3]]", :navigationEnabled="true", :autoplay="true").mt-5
                    Slide(v-for="image in headway.images", :key="image")
                      img(:src="image", @click=`openImageModal(image)`, style="width: 300px; max-width: 100%;")
                h1.text-center(v-else) {{$t('headway.no_images')}}
  sweet-modal(ref="image-modal")
    img.modal-image(:src="modalImage")
