.container
  .page-header
    h1.page-title {{$t('headways.page_title')}}
  form(@submit.prevent="createHeadway")
    .card.col-lg-12
      .card-header
        h3.card-title {{$t('headway_create.page_title')}}
      .card-body
        #dimmer.dimmer(:class="{'active': isLoading}")
          .loader
          .dimmer-content
            .col-sm-4
              .form-group
                label.form-label {{$t('headway_create.type')}}
                select.form-control.custom-select(v-model="type")
                  option(name="type", value="BUILD") Bodybuilding
                  option(name="type", value="STRENGTH") Powerbuilding
            .row(v-if="type === 'BUILD'")
              .col-sm-2
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.neck')}}
                    input.form-control(type='number', v-model="neck")
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.arm')}}
                    input.form-control(type='number', v-model="arm")
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.forearm')}}
                    input.form-control(type='number', v-model="forearm")
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.wrist')}}
                    input.form-control(type='number', v-model="wrist")
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.chest')}}
                    input.form-control(type='number', v-model="chest")
              .col-sm-2
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.waist')}}
                    input.form-control(type='number', v-model="waist")
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.thigh')}}
                    input.form-control(type='number', v-model="thigh")
                .col-sm-8
                  .form-group
                    label.form-label {{$t('headway_create.calf')}}
                    input.form-control(type='number', v-model="calf")
              .col-sm-4
                .form-group
                  .custom-file
                    label.form-label {{$t('headway_create.images')}}
                    input(type="file", id="images", accept="image/png, image/jpeg", ref="images", @change="handleFileChange", multiple)
                .form-group.mt-2
                  .row.gutters-sm
                    template(v-for="(image, index) in imagesPreviews")
                      .col-6.col-sm-4
                        label.imagecheck.mb-4
                          input.imagecheck-input(:id="'image' + index", name='imagecheck', type='checkbox', :value="index" :checked="image.active", @click="imageClickHandler(index)")
                          figure.imagecheck-figure
                            img.imagecheck-image(style="height: 118px; weight: 118px", :src="image.file")
              .col-sm-4
                .col-md-12
                  img(src="@/assets/images/measurements.jpg")
            .row(v-else)
              .col-sm-5
                .col-sm-12
                  .form-group
                    .custom-switches-stacked.mt-5
                      label.custom-switch
                        input.custom-switch-input(type='checkbox', name='copy_from', v-model="copyFromSchedule")
                        span.custom-switch-indicator
                        span.custom-switch-description {{$t('headway_create.copy_from')}}
                template(v-if="!copyFromSchedule")
                  .col-sm-12(v-for="measurement in measurements")
                    .form-group
                      .row.gutters-xs
                        .col.col-sm-4
                          input.form-control(type="text", placeholder="Nazwa boju", v-model="measurement.name", required)
                        .col.col-sm-3
                          input.form-control(type='text', placeholder="Weight", v-model="measurement.value", required)
                        .col.col-sm-3
                          input.form-control(type='text', placeholder="Reps", v-model="measurement.reps", required)
                  .col-sm-12
                    form(@submit.prevent="appendToMeasurements")
                      .form-group
                        .row.gutters-xs
                          .col.col-sm-4
                            input.form-control(type="text", placeholder="Nazwa boju", v-model='name', required)
                          .col.col-sm-3
                            input.form-control(type='number', placeholder="Weight", v-model='weight', required)
                          .col.col-sm-3
                            input.form-control(type='number', placeholder="Reps", v-model="reps", required)
                          span.col-auto
                            button.btn.btn-secondary(type='submit')
                              i.fe.fe-plus
      .card-footer.text-right
        button.btn.btn-primary(type='submit', :disabled="(type === 'BUILD' && $v.$invalid) || measurements.length <= 0") {{$t('headway_create.submit')}}
