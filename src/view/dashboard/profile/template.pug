div
  .map-header
    .map-header-layer(style="position: relative; overflow: hidden; z-index: -1;")
      div(style="height: 100%; width: 100%; position: absolute; top: 0px; left: 0px; background-color: rgb(229, 227, 223);")
        img(src="@/assets/images/default-profile-background.jpeg", style="object-fit: cover !important;")
  .container
    #dimmer.dimmer(:class="{'active': isLoading}")
      .loader
      .dimmer-content
        .col-sm-12
          .card.card-profile
            .card-body.text-center
              img.card-profile-img(v-if="avatar", :src='avatar')
              span.avatar.avatar-blue.avatar-lg.text-center.card-profile-img(v-else) {{getInitials()}}
              h3.mb-3 {{displayName || username}}
              h4.mb-3(style="font-weight: 500") {{title || $t('profile.none')}}
              p.mb-4
                | {{bio || $t('profile.bio_empty')}}
              button.btn.btn-primary(type='button').mr-1
                i.fe.fe-user-plus.mr-2
                | {{$t('profile.follow')}}
              button.btn.btn-outline-primary(type='button')
                i.fe.fe-plus.mr-2
                | {{$t('profile.more')}}
        .row
          .col-sm-4
            .col-sm-12
              .card
                .card-body(style="font-weight: 600")
                  p {{$t('profile.location')}}
                    span.tag.ml-2 {{location || $t('profile.none')}}
                  p {{$t('profile.site')}}
                    span(style="font-weight: 500").ml-1
                      a(:href="website", target="_blank") {{website || $t('profile.none')}}
                  p {{$t('profile.services')}}
                    span.tag.ml-1.mb-2(v-for="service in services") {{service}}
                  div.mt-6
                    button.btn.btn-twitter.btn-sm.mr-1
                      span.fe.fe-twitter.mr-1
                      |  Follow
                    button.btn.btn-facebook.btn-sm.mr-1
                      span.fe.fe-facebook.mr-1
                      |  Like
                    button.btn.btn-instagram.btn-sm.mr-1
                      span.fe.fe-instagram.mr-1
                      |  Follow
            .col-sm-12
              .card
                .card-header
                  h3.card-title {{$t('profile.following')}}
                .card-body
                  .avatar-list.avatar-list-stacked
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/12.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/21.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/29.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/2.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/male/34.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/male/34.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/male/34.jpg)')
                    span.avatar.avatar-lg +8
            .col-sm-12
              .card
                .card-header
                  h3.card-title {{$t('profile.followers')}}
                .card-body
                  .avatar-list.avatar-list-stacked
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/12.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/21.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/29.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/female/2.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/male/34.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/male/34.jpg)')
                    span.avatar.avatar-lg(style='background-image: url(./demo/faces/male/34.jpg)')
                    span.avatar.avatar-lg +8
          .col-sm-8
            .col-sm-12
              .card
                .card-status.bg-warning
                .card-header
                  h3.card-title {{$t('profile.recommendations')}}
                  .ml-auto.text-muted
                    i.fe.fe-star.ml-2
                    i.fe.fe-star.ml-2
                    i.fe.fe-star.ml-2
                ul.list-group.card-list-group
                  li.list-group-item.py-5(v-for="index in 4")
